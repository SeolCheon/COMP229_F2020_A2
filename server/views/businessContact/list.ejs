<%- include ../partials/header.ejs %>

<main class="container">
    <div class="row">
        <div class="col-md-offset-3 col-md-8">
            <h1><%= title %></h1>
            <br>

            <% if(typeof displayName == 'string' && displayName){%> 
                <a href="/contact-list/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i>Add a Contact List</a>
            <% } %>
            
            <table class="table table-bordered table-striped table-hover">
                <!--Header Row-->
                <tr>
                <% if(typeof displayName == 'string' && displayName){%>   
                    <th class="text-center col-1">Name</th>
                    <th class="text-center col-1">Contact Number</th>
                    <th class="text-center col-1">Email Address</th>  
                    <th class="text-center col-2"></th>
                    <th class="text-center col-2"></th>
                <% }else{ %>
                    <th class="text-center col-1">Name</th>
                    <th class="text-center col-1">Contact Number</th>
                    <th class="text-center col-1">Email Address</th>  
                <% } %>
                </tr>

                <!--Repeatable Template Row-->
                <% for(let count = 0; count <ContactList.length; count++){ %>
                    <tr>
                    <% if(typeof displayName == 'string' && displayName){%> 
                        <td class="text-center col-1"><%= ContactList[count].name %></td>
                        <td class="text-center col-1"><%= ContactList[count].number %></td>
                        <td class="text-center col-1"><%= ContactList[count].email %></td>
                        <td class="text-center col-2">
                            <a href="/contact-list/edit/<%= ContactList[count]._id %>" class="btn btn-primary btn-sm">
                            <i class="fas fa-pencil-alt"></i> Edit</a>
                        </td>
                        <td class="text-center col-2">
                            <a href="/contact-list/delete/<%= ContactList[count]._id %>" class="btn btn-danger btn-sm">
                            <i class="fas fa-trash-alt"></i>Delete</a>
                        </td>
                        <% } else { %>
                        <td class="text-center col-1"><%= ContactList[count].name %></td>
                        <td class="text-center col-1"><%= ContactList[count].number %></td>
                        <td class="text-center col-1"><%= ContactList[count].email %></td>
                        <% } %>
                    </tr>
                <% } %>

                
            </table>
            <br>
            <br>
            <br>
        </div>
    </div>
    </main>
    <%- include ../partials/footer.ejs %>
<!--Header-->

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <!-- CSS Section -->
  <link rel='stylesheet' href="/bootstrap/dist/css/bootstrap.min.css">
  <link rel='stylesheet' href="/@fortawesome/fontawesome-free/css/all.min.css">
  <link rel='stylesheet' href='/Content/app.css'>
</head>
<body >

  <!--Main Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    <a class="navbar-brand" href="/"> <img src="/Assets/images/logo.png" width="40" height="40" class="d-inline-block align-top" alt="" loading="lazy">Seol Cheon</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
  
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav ml-auto">

        <% if (title == "Home") { %>
        <li class="nav-item active" > 
        <% } else { %>
        <li class="nav-item">
        <% } %>        
          <a class="nav-link" href="/home"><i class="fas fa-lg fa-laptop-house"></i> Home </a>
        </li>

        <% if (title == "About") { %>
          <li class="nav-item active" >
        <% } else { %>
          <li class="nav-item">
        <% } %>
        <a class="nav-link" href="/about"><i class="fas fa-lg fa-info-circle"></i> About </a>
      </li>

        <% if (title == "Projects") { %>
          <li class="nav-item active" >
        <% } else { %>
          <li class="nav-item">
        <% } %>
        <a class="nav-link" href="/projects"><i class="fab fa-lg fa-elementor"></i> Projects </a>
        </li>

        <% if (title == "Services") { %>
          <li class="nav-item active" >
        <% } else { %>
          <li class="nav-item">
        <% } %>
        <a class="nav-link" href="/services"><i class="fas fa-lg fa-cogs"></i> Services </a>
        </li>

        <% if (title == "Business Contact List") { %>
          <li class="nav-item active" >
        <% } else { %>
          <li class="nav-item">
        <% } %>
        <a class="nav-link" href="/contact-list"><i class="fas fa-book"></i> Business contact </a>
        </li>

        <% if (title == "Contact") { %>
          <li class="nav-item active" >
        <% } else { %>
          <li class="nav-item">
        <% } %> 
        <a class="nav-link" href="/contact"><i class="fas fa-lg fa-mobile-alt"></i> Contact </a>
        </li>
        
         <% if(typeof displayName == 'string' && displayName){%> 
          <li class="navbar-text"><i class="fas fa-lg fa-user"></i> Welcome, <%= displayName %></li>
          <li class="nav-item"><a href="/logout" class="nav-link">
            <i class="fas fa-lg fa-sign-out-alt"></i>Logout</a></li>
        <% } else { %>
          <li class="nav-item"><a href="/login" class="nav-link">
            <i class="fas fa-lg fa-sign-in-alt"></i> Login</a>
            </li>
        <% } %> 
        
    </div>
  </nav>